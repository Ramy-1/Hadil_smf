{% extends 'frontbase.html.twig' %}

{% block title %}Panier!
{% endblock %}
{% block ff %}{% endblock %}

{% block body %}
	{% for o in tab %}
		<li>
			<figure class="image"><img src="{{asset('/front/img/img_square_5.jpg')}}" alt=""></figure>
			<div class="text">
				<span class="price">{{o.prix}}</span>
				<h3>{{o.getPlat().getNomPlat()}}</h3>
				<p>{{o.description}}</p>
				<a href="{{path('commandDelete',{'id':o.id})}}">delete du Panier</a>
			</div>
		</li>
	{% endfor %}
	<input type="submit" name="submit" id="submit" value="Confirmer Command :{{total}}" class="btn btn-lg btn-primary btn-block">

{% endblock %}
