{% extends 'frontbase.html.twig' %}

{% block title %}Our Plats
{% endblock %}

{% block body %}
	{% for o in tab %}
		<li>
			<figure class="image"><img src="{{asset('/front/img/img_square_5.jpg')}}" alt="Free Bootstrap Template by uicookies.com"></figure>
			<div class="text">
				<span class="price">{{o.prix}}</span>
				<h3>{{o.nomplat}}</h3>
				<p>{{o.description}}</p>
				<p>{{o.jaime}}</p>
				<a href="{{path('front_jaime',{'id':o.id})}}">
					<i class="icon-heart icon-4x"></i>
					<span>J'aime</span>
				</a>
			</div>
			<a href="{{path('AddPlatToPanier',{'id':o.id})}}">Add to Panier</a>
		</li>
	{% endfor %}
{% endblock %}

{% block events %}
	{% for evenement in evenements %}
		<div class="col-lg-3 col-md-6  col-sm-6 wow fadeInUp " data-wow-delay="0.1s">
			<div class="team-item text-center rounded overflow-hidden">
				<div class="rounded-circle overflow-hidden m-15">

					<img class="img-fluid" src="{{ asset('uploads/' ~ evenement.image) }}" alt="" style="width: 200px;">
				</div>
				<h5 class="mb-0">{{evenement.nom}}</h5>
				<small>{{ evenement.date ? evenement.date|date('Y-m-d') : '' }}</small>

			</div>
		</div>

	{% endfor %}
{% endblock %}

