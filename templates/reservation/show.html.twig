{% extends 'base.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
    <h1>Reservation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reservation.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ reservation.date ? reservation.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Des</th>
                <td>{{ reservation.des }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_reservation_index') }}"><i class="fas fa-2x fa-hand-point-left"></i></a>

    <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}"><i class="fas fa-2x fa-edit"></i></a>

    {{ include('reservation/_delete_form.html.twig') }}
{% endblock %}
