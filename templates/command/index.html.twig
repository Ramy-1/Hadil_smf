{% extends 'base.html.twig' %}

{% block title %}Hello CommandController!
{% endblock %}


{% block body %}
	<div class="content">
		<div class="container-fluid">
			<div class="row">
				<div class="col-md-12">
					<div class="card strpied-tabled-with-hover">
						<div class="card-header ">
							<h4 class="card-title">Table Command</h4>
							<p class="card-category">les commands</p>
						</div>
						<div class="card-body table-full-width table-responsive">
							<table id="zero_config" class="table table-striped table-bordered">
								<thead>
									<tr>
										<th></th>
										<th>
											id
										</th>
										<th>
											name user
										</th>
										<th>
											produit
										</th>
										<th>
											prix unit
										</th>
									</tr>
								</thead>
								<tbody>
									{% for c in tab %}
										{% if c.isConfirmed() %}
											<tr>
												<td>
													{{ c.id }}
												</td>
												<td>
													{{ c.idUser }}
												</td>
												{# <td>{{c.idPanier}} </td> #}
												<td>
													{{ c.description }}
												</td>
												<td>
													{{ c.prix }}
												</td>
												<td>
													<a href="{{ path('commandDelete',{'id':c.id}) }}">
														delete
													</a>
												</td>
											</tr>
										{% endif %}
									{% endfor %}
								</tbody>
							</div>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
	<script>
		$("#zero_config").DataTable();
	</script>
{% endblock %}
