{% extends 'base.html.twig' %}

{% block title %}Hello PanierController!
{% endblock %}
{% block panier %}

	<li class="nav-item dropdown">
		<a class="nav-link dropdown-toggle" href="http://example.com" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
			<span class="no-icon">Panier</span>
		</a>
		<div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">


			{% for c in tab %}
				<tr>
					<td>
						<a class="dropdown-item" href="#">{{c.description}}</a>
					</td>
					<td>{{c.prix}}</td>
				</tr>
			{% endfor %}

			<div class="divider"></div>
			<a class="dropdown-item" href="#">Separated link</a>
		</div>
	</li>


{% endblock %}
{% block body %}
<div class="content">
<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
			<div class="card strpied-tabled-with-hover">
				<div class="card-header ">
					<h4 class="card-title">Table Panier</h4>
					<p class="card-category">les commands</p>
				</div>
				<div class="card-body table-full-width table-responsive">
					<table id="zero_config" class="table table-striped table-bordered">
						<thead>
							<tr>
								<th></th>
								<th>
									id
								</th>
								<th>
									name user
								</th>
								<th>
									produit
								</th>
								<th>
									prix unit
								</th>
							</tr>
						</thead>
						<tbody>
							{% for c in tab %}
								<tr>
									<td>
										{{ c.id }}
									</td>
									<td>
										{{ c.idUser }}
									</td>
									{# <td>{{c.idPanier}} </td> #}
									<td>
										{{ c.description }}
									</td>
									<td>
										{{ c.prix }}
									</td>
									<td>
										<a href="{{ path('commandDelete',{'id':c.id}) }}">
											delete
										</a>
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</div>
				</table>
			</div>
		</div>
	</div>
</div>
</div>
<script>
$("#zero_config").DataTable();
</script>{% endblock %}
